<div class="header">
    <div class="inner-header">
        <div class="logo"><img src="./images/logo.png">
            <p>
                ScrapBook
            </p>
        </div>
        <div class="navig">
            <ul>
                {{!-- <li>
                    <a href='/api/profile'>Profile</a>
                </li> --}}
                <li>
                    <a href='/logout'>Logout</a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="content">
    <div class="clearfix"></div>
    <div class="uploadscontainer">

        {{#each list}}
        <div class="card">
            <img src="/uploads/{{this.image}}" style="width:100%; height:100%">
            <div class="container1">
                <h4><b>{{title}}</b></h4>
                <p>{{caption}}</p>
            </div>
            
            <a href="/delete/{{this._id}}"><i class="fa fa-trash fa-lg"></i></a>
            <a href="/update/{{this._id}}"><i class="fa fa-pencil fa-lg"></i></a>

        </div>
        {{/each}}
    </div>

    <div class="upload">
        <center>
            <h1 class="h-primary center">Save your memory!!</h1>
        </center>

        <form action="/add" method="post" enctype="multipart/form-data">
        <input type="hidden" name="_id">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fa fa-header"></i>
                        </span>
                    </div>
                    <input type="text" class="form-control" name="title" placeholder="Enter Title" value="{{ulist.title}}">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fa fa-file-text"></i>
                        </span>
                    </div>
                    <input type="text" class="form-control" name="caption" placeholder="Caption Here">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fa fa-file-image-o"></i>
                        </span>
                    </div>
                    <input type="file" class="form-control" id="image" name="image">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
            </div>
        </form>
    </div>
</div>

<div class="clearfix"></div>
